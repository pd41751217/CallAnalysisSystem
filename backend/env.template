# ===========================================
# CALL ANALYSIS SYSTEM - BACKEND ENVIRONMENT
# ===========================================

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3002

# ===========================================
# DATABASE CONFIGURATION (SUPABASE)
# ===========================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===========================================
# JWT CONFIGURATION
# ===========================================
# Generate a strong secret key for JWT tokens
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=24h

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Your VPS domain or IP address where frontend will be hosted
CORS_ORIGIN=https://your-domain.com
FRONTEND_URL=https://your-domain.com

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# SMTP settings for sending emails (password reset, welcome emails)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@your-domain.com

# ===========================================
# OPENAI CONFIGURATION
# ===========================================
# For speech-to-text and AI analysis features
OPENAI_API_KEY=your-openai-api-key-here

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# AUDIO PROCESSING
# ===========================================
# Audio source configuration (1=mic, 2=speakers, 3=both)
AUDIO_SOURCE=3
MAX_QUEUE_SIZE_FOR_OPENAI=5000

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info

